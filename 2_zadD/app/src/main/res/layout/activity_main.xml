<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="134dp"
        android:layout_height="24dp"
        android:text="Podaj numer kawy:"
        android:fontFamily="sans-serif-black"
        android:layout_alignParentTop="true"/>
    <EditText
        android:id="@+id/edit1"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:hint="Numer kawy 1, 2, 3"
        android:inputType="number"
        android:tooltipText="Masz do wyboru 1, 2, 3"
        android:layout_below="@+id/txt1"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="271dp"
        android:layout_height="31dp"
        android:text="Podaj wagę w dekagramach: "
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edit1"/>
    <EditText
        android:id="@+id/edit2"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:hint="Waga w dekagramach"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txt2"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="Zamów"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:backgroundTint="#431717"
        android:layout_below="@+id/edit2"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="685dp"
        android:layout_height="67dp"
        android:text=""
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_below="@+id/btn1"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="343dp"
        android:layout_height="146dp"
        android:src="@drawable/kawa_flilizanka"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txt3"/>
</RelativeLayout>